set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

mkdir -p ${BOSH_INSTALL_TARGET}/src
mkdir -p ${BOSH_INSTALL_TARGET}/bin
cp -a . ${BOSH_INSTALL_TARGET}/src

# Set Golang dependency
export GOROOT=$(readlink -nf /var/vcap/packages/golang-1.10-linux)
export PATH=${GOROOT}/bin:${PATH}
export GOCACHE=/tmp/gocache

export PATH=$PATH:$(pwd)
export INSTALL_DIRECTORY=$(pwd)
curl https://raw.githubusercontent.com/golang/dep/master/install.sh | sh

apt-get update
apt-get install -y git

PACKAGE_NAME=github.com/pusher/oauth2_proxy

export GOPATH=${BOSH_INSTALL_TARGET}:${BOSH_INSTALL_TARGET}/src/${PACKAGE_NAME}

pushd ${BOSH_INSTALL_TARGET}/src/${PACKAGE_NAME}
  dep ensure
  ${GOROOT}/bin/go install
popd

# Clean up source artifacts
rm -rf ${BOSH_INSTALL_TARGET}/src ${BOSH_INSTALL_TARGET}/pkg
